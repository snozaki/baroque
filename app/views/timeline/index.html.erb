    </ul>
  </div>

  <div class="main_box">
    <div class="input_form">
      <%= form_for (@article) do |f| %>
        <div>
          <%= f.text_area :title, placeholder: '投稿のタイトルを入力', style: 'width: 100%;height: 30px;resize: none' %>
        </div>
        <div>
          <%= f.text_area :text, placeholder: 'みんなで共有したい情報を投稿', style: 'width: 100%;height: 80px;' %>
        </div>
        <div>
          <%= f.file_field :image %>
        </div>
        <div class="col10 push1">
          <%= button_tag type: "submit", class: "btn btn-primary submit_btn" do %>
          投稿する<% end %>
        </div>
      <% end %>
    </div>
    <ul class="cbp_tmtimeline">
      <% @articles.each do |article| %>
        <li>
          <time class="cbp_tmtime" datetime=""><span><%= article.created_at.strftime("%Y/%m/%d") %></span> <span><%= article.created_at.strftime("%H:%M") %></span></time>
          <div class="cbp_tmicon" style="background-image:url('<%= article.user.avatar %>'); background-size: cover;"></div>
          <div class="cbp_tmlabel t_textbox">
            <h2><%= article.title %></h2>
            <p><%= article.text %></p>
            <% article.images.each do |i| %>
              <img src="<%= i.image %>" class="t_image">
            <% end %>
          </div>
        </li>
        <!-- <textarea class="cbp_tmlabel t_textbox" name="example" rows="1"></textarea> -->
      <% end %>
      <li>
        <time class="cbp_tmtime" datetime="2013-04-11T12:04"><span>4/11/13</span> <span>12:04</span></time>
        <div class="cbp_tmicon cbp_tmicon-screen"></div>
        <div class="cbp_tmlabel">
          <h2>Greens radish arugula</h2>
          <p>Caulie dandelion maize...</p>
        </div>
      </li>
      <li>
